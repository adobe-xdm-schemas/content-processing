{
  "$id": "http://ns.sensei.adobe.com/schemas/content/v2/classification",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "classification": {
      "type": "string"
    },
    "labels": {
      "type": "string"
    },
    "class_info": {
      "type": "object",
      "title": "The Class_info Schema",
      "description": "An explanation about the purpose of this instance.",
      "required": [
        "class_name",
        "class_labels",
        "exclusive_class_labels"
      ],
      "properties": {
        "class_name": {
          "type": "string",
          "title": "The Class_name Schema",
          "description": "An explanation about the purpose of this instance.",
          "default": ""
        },
        "class_labels": {
          "type": "array",
          "title": "The Class-labels Schema",
          "description": "An explanation about the purpose of this instance.",
          "items": {
            "$ref": "#/definitions/labels"
          }
        },
        "exclusive_class_labels": {
          "type": "array",
          "description": "An explanation about the purpose of this instance.",
          "items": {
            "type": "array",
            "title": "The Items Schema",
            "items": {
              "type": "string",
              "title": "The Items Schema",
              "default": ""
            }
          }
        }
      }
    },
    "classification_entry": {
      "type": "object",
      "required": [
        "class_label"
      ],
      "properties": {
        "class_label": {
          "type": "string"
        },
        "score": {
          "type": "number",
          "title": "The Score Schema ",
          "default": 0,
          "examples": [
            0.44999998807907104
          ]
        },
        "meta_info": {
          "type": "object"
        }
      }
    },
    "classifications_array": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "classification_entries"
        ],
        "properties": {
          "classification_entries": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/classification_entry"
            }
          },
          "class_info": {
            "$ref": "#/definitions/class_info"
          }
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "classifications": {
      "$ref": "#/definitions/classifications_array"
    }
  },
  "required": [
    "classifications"
  ]
}
